<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- tree view -->
		<record id="view_vit_token_resell_tree" model="ir.ui.view">
			<field name="name">vit_token_resell_tree</field>
			<field name="model">vit.token_resell</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<list string="Token Resell">
					<field name="name" /> <!-- 100-->
					<field name="investor_id" /> <!-- 100-->
					<field name="qty_token" /> <!-- 101-->
					<field name="property_unit_id" /> <!-- 101-->
					<field name="qty_token_available" /> <!-- 102-->
					<field name="stage_id" /> <!-- 102-->
					<field name="price_per_token" /> <!-- 103-->
					<field name="status" /> <!-- 104-->
				</list>
			</field>
		</record>
		<!-- pivot view -->
		<record id="view_vit_token_resell_pivot" model="ir.ui.view">
			<field name="name">vit_token_resell_tree</field>
			<field name="model">vit.token_resell</field>
			<field name="type">pivot</field>
			<field name="arch" type="xml">
				<pivot string="Token Resell">
					<field name="investor_id" type="row"/>
					<field name="property_unit_id" type="row"/>
					<field name="stage_id" type="row"/>
				</pivot>
			</field>
		</record>
		<!-- form view -->
		<record id="view_vit_token_resell_form" model="ir.ui.view">
			<field name="name">vit_token_resell_form</field>
			<field name="model">vit.token_resell</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="Token Resell">
					<header>
						<button string="Confirm" type="object" name="action_confirm" invisible="allow_confirm==False" class="oe_highlight" icon="fa-check-circle" />
						<button string="Cancel" type="object" name="action_cancel" invisible="allow_cancel==False" icon="fa-times-circle"/>
						<field name="stage_id" widget="statusbar" options="{'fold_field':'fold'}" />
						<button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
								<!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
								<!--field name="detail_ids" invisible="1"/-->
							<!--/button-->
						</div>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" string="Token Resell Name"/>
							<h1><field name="name" /></h1>
						</div>
						<group>
							<group> <!-- left -->
								<field name="stage_is_draft" invisible="True" />
								<field name="stage_is_done" invisible="True" readonly="stage_is_draft==False"/>
								<field name="allow_confirm" invisible="True" readonly="stage_is_draft==False"/>
								<field name="allow_cancel" invisible="True" readonly="stage_is_draft==False"/>
								<field name="stage_name" invisible="True" readonly="stage_is_draft==False"/>
								<field name="qty_token"  readonly="stage_is_draft==False"/>
								<field name="qty_token_available"  readonly="stage_is_draft==False"/>
								<field name="price_per_token"  readonly="stage_is_draft==False"/>
								<field name="status"  readonly="stage_is_draft==False"/>
							</group>
							<group> <!-- right -->
								<field name="investor_id"  readonly="stage_is_draft==False"/>
								<field name="property_unit_id"  readonly="stage_is_draft==False"/>
							</group>
						</group>
						<notebook>
							<page name="order_token_ids" string="Order Token">
								<field name="order_token_ids" readonly="stage_is_draft==False"/>
							</page>
						</notebook>
						<group name="note_group" col="6" class="mt-2 mt-md-0">
							<group colspan="4">
							</group>
							<group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
							</group>
							<div class="clearfix"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- search -->
		<record id="view_vit_token_resell_search" model="ir.ui.view">
			<field name="name">vit_token_resell</field>
			<field name="model">vit.token_resell</field>
			<field name="arch" type="xml">
				<search string="Token Resell">

					<filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
					<filter string="Qty Token" name="filter_by_qty_token" domain="[('qty_token','=','')]" />
					<filter string="Qty Token Available" name="filter_by_qty_token_available" domain="[('qty_token_available','=','')]" />
					<filter string="Price Per Token" name="filter_by_price_per_token" domain="[('price_per_token','=','')]" />
					<filter string="Status" name="filter_by_status" domain="[('status','=','')]" />
					<filter string="Stage Is Draft" name="filter_by_stage_is_draft" domain="[('stage_is_draft','=','')]" />
					<filter string="Stage Is Done" name="filter_by_stage_is_done" domain="[('stage_is_done','=','')]" />
					<filter string="Allow Confirm" name="filter_by_allow_confirm" domain="[('allow_confirm','=','')]" />
					<filter string="Allow Cancel" name="filter_by_allow_cancel" domain="[('allow_cancel','=','')]" />
					<filter string="Stage Name" name="filter_by_stage_name" domain="[('stage_name','=','')]" />
					<field name="name" select="True"/>
					<field name="qty_token" select="True"/>
					<field name="qty_token_available" select="True"/>
					<field name="price_per_token" select="True"/>
					<field name="status" select="True"/>
					<field name="stage_is_draft" select="True"/>
					<field name="stage_is_done" select="True"/>
					<field name="allow_confirm" select="True"/>
					<field name="allow_cancel" select="True"/>
					<field name="stage_name" select="True"/>
					<field name="investor_id" select="True"/>
					<field name="property_unit_id" select="True"/>
					<field name="stage_id" select="True"/>
					<group string="Group By..">
						<filter string="Investor" domain="[]" name="group_by_investor_id" context="{'group_by':'investor_id'}"/>
						<filter string="Property Unit" domain="[]" name="group_by_property_unit_id" context="{'group_by':'property_unit_id'}"/>
						<filter string="Stage" domain="[]" name="group_by_stage_id" context="{'group_by':'stage_id'}"/>
						<filter string="Status" domain="[]" name="group_by_status" context="{'group_by':'status'}"/>
					</group>
				</search>
			</field>
		</record>
		<!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
		<record id="view_vit_token_resell_kanban" model="ir.ui.view" >
			<field name="name">vit_token_resell</field>
			<field name="model">vit.token_resell</field>
			<field name="arch" type="xml">
				<kanban version="7.0">
					<field name="id" />
					<templates>
						<t t-name="card" class="flex-row">
							<main class="p-2">
								<h4>
									<a type="open"><field name="name"/></a>
								</h4>
							</main>
						</t>
					</templates>
				</kanban>
			</field>
		</record>
		<!-- graph -->
		<record id="view_vit_token_resell_graph" model="ir.ui.view">
			<field name="name">vit_token_resell</field>
			<field name="model">vit.token_resell</field>
			<field name="arch" type="xml">
				<graph string="Token Resell" type="bar">
					<field name="investor_id"/>
				</graph>
			</field>
		</record>
		<!-- action window -->
		<record id="action_token_resell" model="ir.actions.act_window">
			<field name="name">Token Resell</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">vit.token_resell</field>
			<field name="view_mode">list,form,kanban,pivot,graph</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
				Click to add a new Token Resell
				</p><p>

				</p>
			</field>
		</record>

	</data>
</odoo>