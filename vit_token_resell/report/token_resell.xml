<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- report qweb view -->
		<record id="action_report_vit_token_resell" model="ir.actions.report">
			<field name="name">Token Resell</field>
			<field name="model">vit.token_resell</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">vit_token_resell.vit_token_resell_report</field>
			<field name="report_file">vit_token_resell.vit_token_resell_report</field>
			<field name="print_report_name">object.name</field>
			<field name="binding_model_id" ref="vit_token_resell.model_vit_token_resell"/>
			<field name="binding_type">report</field>
		</record>
		<!-- document template -->
		<template id="vit_token_resell.vit_token_resell_report_document" >
			<t t-call="web.external_layout">
				<t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
				<div class="page">
					<h2>
						Token Resell: <span t-field="doc.name"/>
					</h2>
					<div class="row mt32 mb32">
						<div class="col-auto mw-100 mb-2">
							<strong>Qty Token</strong>
							<p class="m-0" t-field="doc.qty_token" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Qty Token Available</strong>
							<p class="m-0" t-field="doc.qty_token_available" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Price Per Token</strong>
							<p class="m-0" t-field="doc.price_per_token" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Status</strong>
							<p class="m-0" t-field="doc.status" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Stage Is Draft</strong>
							<p class="m-0" t-field="doc.stage_is_draft" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Stage Is Done</strong>
							<p class="m-0" t-field="doc.stage_is_done" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Allow Confirm</strong>
							<p class="m-0" t-field="doc.allow_confirm" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Allow Cancel</strong>
							<p class="m-0" t-field="doc.allow_cancel" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Stage Name</strong>
							<p class="m-0" t-field="doc.stage_name" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Investor</strong>
							<p class="m-0" t-field="doc.investor_id"/>
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Property Unit</strong>
							<p class="m-0" t-field="doc.property_unit_id"/>
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Stage</strong>
							<p class="m-0" t-field="doc.stage_id"/>
						</div>
					</div>
				</div>
				<div class="oe_structure"/>
				<h2>Order Token</h2>
				<table class="table table-sm o_main_table" name="order_token_ids_table">
					<thead>
						<tr>
							<td> Name</td>
							<td> Inherit</td>
							<td>Token Resell</td>
						</tr>
					</thead>
					<tbody class="order_token_ids_tbody">
						<tr t-foreach="doc.order_token_ids" t-as="line">
							<td><span t-field="line._name" /></td>
							<td><span t-field="line._inherit" /></td>
							<td><span t-field="line.token_resell_id" /></td>
						</tr> <!-- foreach-->
					</tbody>
				</table>
				<div class="oe_structure"/>
			</t>
		</template>

		<!-- main template -->
		<template id="vit_token_resell.vit_token_resell_report">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-set="lang" t-value="doc.create_uid.lang"/>
					<t t-call="vit_token_resell.vit_token_resell_report_document" />
				</t>
			</t>
		</template>

	</data>
</odoo>