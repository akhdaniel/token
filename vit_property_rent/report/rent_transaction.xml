<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- report qweb view -->
		<record id="action_report_vit_rent_transaction" model="ir.actions.report">
			<field name="name">Rent Transaction</field>
			<field name="model">vit.rent_transaction</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">vit_property_rent.vit_rent_transaction_report</field>
			<field name="report_file">vit_property_rent.vit_rent_transaction_report</field>
			<field name="print_report_name">object.name</field>
			<field name="binding_model_id" ref="vit_property_rent.model_vit_rent_transaction"/>
			<field name="binding_type">report</field>
		</record>
		<!-- document template -->
		<template id="vit_property_rent.vit_rent_transaction_report_document" >
			<t t-call="web.external_layout">
				<t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
				<div class="page">
					<h2>
						Rent Transaction: <span t-field="doc.name"/>
					</h2>
					<div class="row mt32 mb32">
						<div class="col-auto mw-100 mb-2">
							<strong>Start Date</strong>
							<p class="m-0" t-field="doc.start_date" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Duration</strong>
							<p class="m-0" t-field="doc.duration" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>End Date</strong>
							<p class="m-0" t-field="doc.end_date" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Rent Price Per Month</strong>
							<p class="m-0" t-field="doc.rent_price_per_month" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Amount Total Rent</strong>
							<p class="m-0" t-field="doc.amount_total_rent" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Transaction Date</strong>
							<p class="m-0" t-field="doc.transaction_date" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Stage Is Draft</strong>
							<p class="m-0" t-field="doc.stage_is_draft" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Stage Is Done</strong>
							<p class="m-0" t-field="doc.stage_is_done" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Allow Confirm</strong>
							<p class="m-0" t-field="doc.allow_confirm" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Allow Cancel</strong>
							<p class="m-0" t-field="doc.allow_cancel" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Stage Name</strong>
							<p class="m-0" t-field="doc.stage_name" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Property Unit</strong>
							<p class="m-0" t-field="doc.property_unit_id"/>
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Customer</strong>
							<p class="m-0" t-field="doc.customer_id"/>
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Stage</strong>
							<p class="m-0" t-field="doc.stage_id"/>
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Rent Type</strong>
							<p class="m-0" t-field="doc.rent_type_id"/>
						</div>
					</div>
				</div>
				<div class="oe_structure"/>
			</t>
		</template>

		<!-- main template -->
		<template id="vit_property_rent.vit_rent_transaction_report">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-set="lang" t-value="doc.create_uid.lang"/>
					<t t-call="vit_property_rent.vit_rent_transaction_report_document" />
				</t>
			</t>
		</template>

	</data>
</odoo>