<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- tree view -->
		<record id="view_vit_stage_tree" model="ir.ui.view">
			<field name="name">vit_stage_tree</field>
			<field name="model">vit.stage</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<list string="Stage">
					<field name="sequence"  widget='handle'/>
					<field name="name" /> <!-- 100-->
					<field name="model_id" /> <!-- 100-->
					<field name="done" /> <!-- 102-->
					<field name="draft" /> <!-- 103-->
					<field name="fold" /> <!-- 104-->
					<field name="on_progress" /> <!-- 105-->
					<field name="active" /> <!-- 106-->
					<field name="execute_enter" /> <!-- 107-->
					<field name="allow_confirm" /> <!-- 108-->
					<field name="allow_cancel" /> <!-- 109-->
					<field name="confirmation" /> <!-- 110-->
				</list>
			</field>
		</record>
		<!-- pivot view -->
		<record id="view_vit_stage_pivot" model="ir.ui.view">
			<field name="name">vit_stage_tree</field>
			<field name="model">vit.stage</field>
			<field name="type">pivot</field>
			<field name="arch" type="xml">
				<pivot string="Stage">
					<field name="model_id" type="row"/>
				</pivot>
			</field>
		</record>
		<!-- form view -->
		<record id="view_vit_stage_form" model="ir.ui.view">
			<field name="name">vit_stage_form</field>
			<field name="model">vit.stage</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="Stage">
					<header>
						<button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
								<!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
								<!--field name="detail_ids" invisible="1"/-->
							<!--/button-->
						</div>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" string="Stage Name"/>
							<h1><field name="name" /></h1>
						</div>
						<group>
							<group> <!-- left -->
								<field name="sequence"  />
								<field name="done"  />
								<field name="draft"  />
								<field name="fold"  />
								<field name="on_progress"  />
								<field name="active"  />
								<field name="execute_enter"  />
								<field name="allow_confirm"  />
								<field name="allow_cancel"  />
								<field name="confirmation"  />
							</group>
							<group> <!-- right -->
								<field name="model_id"  />
							</group>
						</group>
						<notebook>
						</notebook>
						<group name="note_group" col="6" class="mt-2 mt-md-0">
							<group colspan="4">
							</group>
							<group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
							</group>
							<div class="clearfix"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- search -->
		<record id="view_vit_stage_search" model="ir.ui.view">
			<field name="name">vit_stage</field>
			<field name="model">vit.stage</field>
			<field name="arch" type="xml">
				<search string="Stage">

					<filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
					<filter string="Sequence" name="filter_by_sequence" domain="[('sequence','=','')]" />
					<filter string="Done" name="filter_by_done" domain="[('done','=','')]" />
					<filter string="Draft" name="filter_by_draft" domain="[('draft','=','')]" />
					<filter string="Fold" name="filter_by_fold" domain="[('fold','=','')]" />
					<filter string="On Progress" name="filter_by_on_progress" domain="[('on_progress','=','')]" />
					<filter string="Active" name="filter_by_active" domain="[('active','=','')]" />
					<filter string="Execute Enter" name="filter_by_execute_enter" domain="[('execute_enter','=','')]" />
					<filter string="Allow Confirm" name="filter_by_allow_confirm" domain="[('allow_confirm','=','')]" />
					<filter string="Allow Cancel" name="filter_by_allow_cancel" domain="[('allow_cancel','=','')]" />
					<filter string="Confirmation" name="filter_by_confirmation" domain="[('confirmation','=','')]" />
					<field name="name" select="True"/>
					<field name="sequence" select="True"/>
					<field name="done" select="True"/>
					<field name="draft" select="True"/>
					<field name="fold" select="True"/>
					<field name="on_progress" select="True"/>
					<field name="active" select="True"/>
					<field name="execute_enter" select="True"/>
					<field name="allow_confirm" select="True"/>
					<field name="allow_cancel" select="True"/>
					<field name="confirmation" select="True"/>
					<field name="model_id" select="True"/>
					<group string="Group By..">
						<filter string="Model" domain="[]" name="group_by_model_id" context="{'group_by':'model_id'}"/>
					</group>
				</search>
			</field>
		</record>
		<!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
		<record id="view_vit_stage_kanban" model="ir.ui.view" >
			<field name="name">vit_stage</field>
			<field name="model">vit.stage</field>
			<field name="arch" type="xml">
				<kanban version="7.0">
					<field name="id" />
					<templates>
						<t t-name="card" class="flex-row">
							<main class="p-2">
								<h4>
									<a type="open"><field name="name"/></a>
								</h4>
							</main>
						</t>
					</templates>
				</kanban>
			</field>
		</record>
		<!-- graph -->
		<record id="view_vit_stage_graph" model="ir.ui.view">
			<field name="name">vit_stage</field>
			<field name="model">vit.stage</field>
			<field name="arch" type="xml">
				<graph string="Stage" type="bar">
					<field name="model_id"/>
				</graph>
			</field>
		</record>
		<!-- action window -->
		<record id="action_stage" model="ir.actions.act_window">
			<field name="name">Stage</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">vit.stage</field>
			<field name="view_mode">list,form,kanban,pivot,graph</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
				Click to add a new Stage
				</p><p>

				</p>
			</field>
		</record>

		<menuitem id="menu_stage" name="Stage" parent="vit_stage_config_menu" action="action_stage" sequence="30"/>
	</data>
</odoo>