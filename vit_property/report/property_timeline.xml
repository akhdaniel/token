<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- report qweb view -->
		<record id="action_report_vit_property_timeline" model="ir.actions.report">
			<field name="name">Property Timeline</field>
			<field name="model">vit.property_timeline</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">vit_property.vit_property_timeline_report</field>
			<field name="report_file">vit_property.vit_property_timeline_report</field>
			<field name="print_report_name">object.name</field>
			<field name="binding_model_id" ref="vit_property.model_vit_property_timeline"/>
			<field name="binding_type">report</field>
		</record>
		<!-- document template -->
		<template id="vit_property.vit_property_timeline_report_document" >
			<t t-call="web.external_layout">
				<t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
				<div class="page">
					<h2>
						Property Timeline: <span t-field="doc.name"/>
					</h2>
					<div class="row mt32 mb32">
						<div class="col-auto mw-100 mb-2">
							<strong>Description</strong>
							<p class="m-0" t-field="doc.description" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Timeline Date</strong>
							<p class="m-0" t-field="doc.timeline_date" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Status</strong>
							<p class="m-0" t-field="doc.status" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Property Unit</strong>
							<p class="m-0" t-field="doc.property_unit_id"/>
						</div>
					</div>
				</div>
				<div class="oe_structure"/>
			</t>
		</template>

		<!-- main template -->
		<template id="vit_property.vit_property_timeline_report">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-set="lang" t-value="doc.create_uid.lang"/>
					<t t-call="vit_property.vit_property_timeline_report_document" />
				</t>
			</t>
		</template>

	</data>
</odoo>