<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- report qweb view -->
		<record id="action_report_vit_property_profit_share" model="ir.actions.report">
			<field name="name">Property Profit Share</field>
			<field name="model">vit.property_profit_share</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">vit_property.vit_property_profit_share_report</field>
			<field name="report_file">vit_property.vit_property_profit_share_report</field>
			<field name="print_report_name">object.name</field>
			<field name="binding_model_id" ref="vit_property.model_vit_property_profit_share"/>
			<field name="binding_type">report</field>
		</record>
		<!-- document template -->
		<template id="vit_property.vit_property_profit_share_report_document" >
			<t t-call="web.external_layout">
				<t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
				<div class="page">
					<h2>
						Property Profit Share: <span t-field="doc.name"/>
					</h2>
					<div class="row mt32 mb32">
						<div class="col-auto mw-100 mb-2">
							<strong>Start Date</strong>
							<p class="m-0" t-field="doc.start_date" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>End Date</strong>
							<p class="m-0" t-field="doc.end_date" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Total Revenue</strong>
							<p class="m-0" t-field="doc.total_revenue" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Total Profit Share Amount</strong>
							<p class="m-0" t-field="doc.total_profit_share_amount" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Stage Is Draft</strong>
							<p class="m-0" t-field="doc.stage_is_draft" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Stage Is Done</strong>
							<p class="m-0" t-field="doc.stage_is_done" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Allow Confirm</strong>
							<p class="m-0" t-field="doc.allow_confirm" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Allow Cancel</strong>
							<p class="m-0" t-field="doc.allow_cancel" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Stage Name</strong>
							<p class="m-0" t-field="doc.stage_name" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Property Unit</strong>
							<p class="m-0" t-field="doc.property_unit_id"/>
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Stage</strong>
							<p class="m-0" t-field="doc.stage_id"/>
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Investor</strong>
							<p class="m-0" t-field="doc.investor_id"/>
						</div>
					</div>
				</div>
				<div class="oe_structure"/>
				<h2>Profit Share Line</h2>
				<table class="table table-sm o_main_table" name="profit_share_line_ids_table">
					<thead>
						<tr>
							<td>Name</td>
							<td>Amount</td>
							<td>Token Count</td>
							<td>Profit Share</td>
						</tr>
					</thead>
					<tbody class="profit_share_line_ids_tbody">
						<tr t-foreach="doc.profit_share_line_ids" t-as="line">
							<td><span t-field="line.name" /></td>
							<td><span t-field="line.amount" /></td>
							<td><span t-field="line.token_count" /></td>
							<td><span t-field="line.profit_share_id" /></td>
						</tr> <!-- foreach-->
					</tbody>
				</table>
				<div class="oe_structure"/>
			</t>
		</template>

		<!-- main template -->
		<template id="vit_property.vit_property_profit_share_report">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-set="lang" t-value="doc.create_uid.lang"/>
					<t t-call="vit_property.vit_property_profit_share_report_document" />
				</t>
			</t>
		</template>

	</data>
</odoo>