<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- report qweb view -->
		<record id="action_report_vit_property_financial" model="ir.actions.report">
			<field name="name">Property Financial</field>
			<field name="model">vit.property_financial</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">vit_property.vit_property_financial_report</field>
			<field name="report_file">vit_property.vit_property_financial_report</field>
			<field name="print_report_name">object.name</field>
			<field name="binding_model_id" ref="vit_property.model_vit_property_financial"/>
			<field name="binding_type">report</field>
		</record>
		<!-- document template -->
		<template id="vit_property.vit_property_financial_report_document" >
			<t t-call="web.external_layout">
				<t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
				<div class="page">
					<h2>
						Property Financial: <span t-field="doc.name"/>
					</h2>
					<div class="row mt32 mb32">
						<div class="col-auto mw-100 mb-2">
							<strong>Total Investment</strong>
							<p class="m-0" t-field="doc.total_investment" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Property Upgrade</strong>
							<p class="m-0" t-field="doc.property_upgrade" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Notaris Fee</strong>
							<p class="m-0" t-field="doc.notaris_fee" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Platform Fee</strong>
							<p class="m-0" t-field="doc.platform_fee" />
						</div>
						<div class="col-auto mw-100 mb-2">
							<strong>Name</strong>
							<p class="m-0" t-field="doc.name"/>
						</div>
					</div>
				</div>
				<div class="oe_structure"/>
			</t>
		</template>

		<!-- main template -->
		<template id="vit_property.vit_property_financial_report">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-set="lang" t-value="doc.create_uid.lang"/>
					<t t-call="vit_property.vit_property_financial_report_document" />
				</t>
			</t>
		</template>

	</data>
</odoo>