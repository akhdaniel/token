<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- tree view -->
		<record id="view_vit_property_profit_share_tree" model="ir.ui.view">
			<field name="name">vit_property_profit_share_tree</field>
			<field name="model">vit.property_profit_share</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<list string="Property Profit Share">
					<field name="name" /> <!-- 100-->
					<field name="property_unit_id" /> <!-- 100-->
					<field name="start_date" /> <!-- 101-->
					<field name="stage_id" /> <!-- 101-->
					<field name="end_date" /> <!-- 102-->
					<field name="investor_id" /> <!-- 102-->
					<field name="total_revenue" /> <!-- 103-->
					<field name="total_profit_share_amount" /> <!-- 104-->
				</list>
			</field>
		</record>
		<!-- pivot view -->
		<record id="view_vit_property_profit_share_pivot" model="ir.ui.view">
			<field name="name">vit_property_profit_share_tree</field>
			<field name="model">vit.property_profit_share</field>
			<field name="type">pivot</field>
			<field name="arch" type="xml">
				<pivot string="Property Profit Share">
					<field name="property_unit_id" type="row"/>
					<field name="stage_id" type="row"/>
					<field name="investor_id" type="row"/>
				</pivot>
			</field>
		</record>
		<!-- form view -->
		<record id="view_vit_property_profit_share_form" model="ir.ui.view">
			<field name="name">vit_property_profit_share_form</field>
			<field name="model">vit.property_profit_share</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="Property Profit Share">
					<header>
						<button string="Confirm" type="object" name="action_confirm" invisible="allow_confirm==False" class="oe_highlight" icon="fa-check-circle" />
						<button string="Cancel" type="object" name="action_cancel" invisible="allow_cancel==False" icon="fa-times-circle"/>
						<field name="stage_id" widget="statusbar" options="{'fold_field':'fold'}" />
						<button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
								<!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
								<!--field name="detail_ids" invisible="1"/-->
							<!--/button-->
						</div>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" string="Property Profit Share Name"/>
							<h1><field name="name" /></h1>
						</div>
						<group>
							<group> <!-- left -->
								<field name="stage_is_draft" invisible="True" />
								<field name="stage_is_done" invisible="True" readonly="stage_is_draft==False"/>
								<field name="allow_confirm" invisible="True" readonly="stage_is_draft==False"/>
								<field name="allow_cancel" invisible="True" readonly="stage_is_draft==False"/>
								<field name="stage_name" invisible="True" readonly="stage_is_draft==False"/>
								<field name="start_date"  readonly="stage_is_draft==False"/>
								<field name="end_date"  readonly="stage_is_draft==False"/>
								<field name="total_revenue"  readonly="stage_is_draft==False"/>
								<field name="total_profit_share_amount"  readonly="stage_is_draft==False"/>
							</group>
							<group> <!-- right -->
								<field name="property_unit_id"  readonly="stage_is_draft==False"/>
								<field name="investor_id"  readonly="stage_is_draft==False"/>
							</group>
						</group>
						<notebook>
							<page name="profit_share_line_ids" string="Profit Share Details">
								<field name="profit_share_line_ids" readonly="stage_is_draft==False">
									<list editable="bottom">
										<field name="name" /> <!-- 100-->
										<field name="amount" /> <!-- 101-->
										<field name="token_count" /> <!-- 102-->
									</list>
								</field>
							</page>
						</notebook>
						<group name="note_group" col="6" class="mt-2 mt-md-0">
							<group colspan="4">
							</group>
							<group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
							</group>
							<div class="clearfix"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- search -->
		<record id="view_vit_property_profit_share_search" model="ir.ui.view">
			<field name="name">vit_property_profit_share</field>
			<field name="model">vit.property_profit_share</field>
			<field name="arch" type="xml">
				<search string="Property Profit Share">

					<filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
					<filter string="Start Date" name="filter_by_start_date" domain="[('start_date','=','')]" />
					<filter string="End Date" name="filter_by_end_date" domain="[('end_date','=','')]" />
					<filter string="Total Revenue" name="filter_by_total_revenue" domain="[('total_revenue','=','')]" />
					<filter string="Total Profit Share Amount" name="filter_by_total_profit_share_amount" domain="[('total_profit_share_amount','=','')]" />
					<filter string="Stage Is Draft" name="filter_by_stage_is_draft" domain="[('stage_is_draft','=','')]" />
					<filter string="Stage Is Done" name="filter_by_stage_is_done" domain="[('stage_is_done','=','')]" />
					<filter string="Allow Confirm" name="filter_by_allow_confirm" domain="[('allow_confirm','=','')]" />
					<filter string="Allow Cancel" name="filter_by_allow_cancel" domain="[('allow_cancel','=','')]" />
					<filter string="Stage Name" name="filter_by_stage_name" domain="[('stage_name','=','')]" />
					<field name="name" select="True"/>
					<field name="start_date" select="True"/>
					<field name="end_date" select="True"/>
					<field name="total_revenue" select="True"/>
					<field name="total_profit_share_amount" select="True"/>
					<field name="stage_is_draft" select="True"/>
					<field name="stage_is_done" select="True"/>
					<field name="allow_confirm" select="True"/>
					<field name="allow_cancel" select="True"/>
					<field name="stage_name" select="True"/>
					<field name="property_unit_id" select="True"/>
					<field name="stage_id" select="True"/>
					<field name="investor_id" select="True"/>
					<group string="Group By..">
						<filter string="Property Unit" domain="[]" name="group_by_property_unit_id" context="{'group_by':'property_unit_id'}"/>
						<filter string="Stage" domain="[]" name="group_by_stage_id" context="{'group_by':'stage_id'}"/>
						<filter string="Investor" domain="[]" name="group_by_investor_id" context="{'group_by':'investor_id'}"/>
					</group>
				</search>
			</field>
		</record>
		<!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
		<record id="view_vit_property_profit_share_kanban" model="ir.ui.view" >
			<field name="name">vit_property_profit_share</field>
			<field name="model">vit.property_profit_share</field>
			<field name="arch" type="xml">
				<kanban version="7.0">
					<field name="id" />
					<templates>
						<t t-name="card" class="flex-row">
							<main class="p-2">
								<h4>
									<a type="open"><field name="name"/></a>
								</h4>
								<span class="text-muted">End Date</span> <field name="end_date"></field>
							</main>
						</t>
					</templates>
				</kanban>
			</field>
		</record>
		<!-- calendar if a date field exists -->
		<record id="view_vit_property_profit_share_cal" model="ir.ui.view">
			<field name="name">vit_property_profit_share_cal</field>
			<field name="model">vit.property_profit_share</field>
			<field name="arch" type="xml">
				<calendar string="Property Profit Share" date_start="end_date">
					<field name="name" />
				</calendar>
			</field>
		</record>
		<!-- graph -->
		<record id="view_vit_property_profit_share_graph" model="ir.ui.view">
			<field name="name">vit_property_profit_share</field>
			<field name="model">vit.property_profit_share</field>
			<field name="arch" type="xml">
				<graph string="Property Profit Share" type="bar">
					<field name="property_unit_id"/>
				</graph>
			</field>
		</record>
		<!-- action window -->
		<record id="action_property_profit_share" model="ir.actions.act_window">
			<field name="name">Property Profit Share</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">vit.property_profit_share</field>
			<field name="view_mode">list,form,kanban,pivot,calendar,graph</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
				Click to add a new Property Profit Share
				</p><p>

				</p>
			</field>
		</record>

		<menuitem id="menu_property_profit_share" name="Property Profit Share" parent="vit_property_sub_menu" action="action_property_profit_share" sequence="70"/>
	</data>
</odoo>