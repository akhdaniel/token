<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- tree view -->
		<record id="view_vit_property_token_move_tree" model="ir.ui.view">
			<field name="name">vit_property_token_move_tree</field>
			<field name="model">vit.property_token_move</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<list string="Property Token Move">
					<field name="name" /> <!-- 100-->
					<field name="token_id" /> <!-- 100-->
					<field name="reference" /> <!-- 101-->
					<field name="from_partner_id" /> <!-- 101-->
					<field name="date" /> <!-- 102-->
					<field name="to_partner_id" /> <!-- 102-->
					<field name="account_move_id" /> <!-- 103-->
					<field name="order_token_id" /> <!-- 104-->
				</list>
			</field>
		</record>
		<!-- pivot view -->
		<record id="view_vit_property_token_move_pivot" model="ir.ui.view">
			<field name="name">vit_property_token_move_tree</field>
			<field name="model">vit.property_token_move</field>
			<field name="type">pivot</field>
			<field name="arch" type="xml">
				<pivot string="Property Token Move">
					<field name="token_id" type="row"/>
					<field name="from_partner_id" type="row"/>
					<field name="to_partner_id" type="row"/>
					<field name="account_move_id" type="row"/>
					<field name="order_token_id" type="row"/>
				</pivot>
			</field>
		</record>
		<!-- form view -->
		<record id="view_vit_property_token_move_form" model="ir.ui.view">
			<field name="name">vit_property_token_move_form</field>
			<field name="model">vit.property_token_move</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="Property Token Move">
					<header>
						<button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
								<!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
								<!--field name="detail_ids" invisible="1"/-->
							<!--/button-->
						</div>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" string="Property Token Move Name"/>
							<h1><field name="name" /></h1>
						</div>
						<group>
							<group> <!-- left -->
								<field name="reference"  />
								<field name="date"  />
							</group>
							<group> <!-- right -->
								<field name="token_id"  />
								<field name="from_partner_id"  />
								<field name="to_partner_id"  />
								<field name="account_move_id"  />
								<field name="order_token_id"  />
							</group>
						</group>
						<notebook>
						</notebook>
						<group name="note_group" col="6" class="mt-2 mt-md-0">
							<group colspan="4">
							</group>
							<group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
							</group>
							<div class="clearfix"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- search -->
		<record id="view_vit_property_token_move_search" model="ir.ui.view">
			<field name="name">vit_property_token_move</field>
			<field name="model">vit.property_token_move</field>
			<field name="arch" type="xml">
				<search string="Property Token Move">

					<filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
					<filter string="Reference" name="filter_by_reference" domain="[('reference','=','')]" />
					<filter string="Date" name="filter_by_date" domain="[('date','=','')]" />
					<field name="name" select="True"/>
					<field name="reference" select="True"/>
					<field name="date" select="True"/>
					<field name="token_id" select="True"/>
					<field name="from_partner_id" select="True"/>
					<field name="to_partner_id" select="True"/>
					<field name="account_move_id" select="True"/>
					<field name="order_token_id" select="True"/>
					<group string="Group By..">
						<filter string="Token" domain="[]" name="group_by_token_id" context="{'group_by':'token_id'}"/>
						<filter string="From Partner" domain="[]" name="group_by_from_partner_id" context="{'group_by':'from_partner_id'}"/>
						<filter string="To Partner" domain="[]" name="group_by_to_partner_id" context="{'group_by':'to_partner_id'}"/>
						<filter string="Account Move" domain="[]" name="group_by_account_move_id" context="{'group_by':'account_move_id'}"/>
						<filter string="Order Token" domain="[]" name="group_by_order_token_id" context="{'group_by':'order_token_id'}"/>
					</group>
				</search>
			</field>
		</record>
		<!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
		<record id="view_vit_property_token_move_kanban" model="ir.ui.view" >
			<field name="name">vit_property_token_move</field>
			<field name="model">vit.property_token_move</field>
			<field name="arch" type="xml">
				<kanban version="7.0">
					<field name="id" />
					<templates>
						<t t-name="card" class="flex-row">
							<main class="p-2">
								<h4>
									<a type="open"><field name="name"/></a>
								</h4>
								<span class="text-muted">Date</span> <field name="date"></field>
							</main>
						</t>
					</templates>
				</kanban>
			</field>
		</record>
		<!-- calendar if a date field exists -->
		<record id="view_vit_property_token_move_cal" model="ir.ui.view">
			<field name="name">vit_property_token_move_cal</field>
			<field name="model">vit.property_token_move</field>
			<field name="arch" type="xml">
				<calendar string="Property Token Move" date_start="date">
					<field name="name" />
				</calendar>
			</field>
		</record>
		<!-- graph -->
		<record id="view_vit_property_token_move_graph" model="ir.ui.view">
			<field name="name">vit_property_token_move</field>
			<field name="model">vit.property_token_move</field>
			<field name="arch" type="xml">
				<graph string="Property Token Move" type="bar">
					<field name="token_id"/>
				</graph>
			</field>
		</record>
		<!-- action window -->
		<record id="action_property_token_move" model="ir.actions.act_window">
			<field name="name">Property Token Move</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">vit.property_token_move</field>
			<field name="view_mode">list,form,kanban,pivot,calendar,graph</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
				Click to add a new Property Token Move
				</p><p>

				</p>
			</field>
		</record>

		<menuitem id="menu_property_token_move" name="Property Token Move" parent="vit_property_config_menu" action="action_property_token_move" sequence="130"/>
	</data>
</odoo>