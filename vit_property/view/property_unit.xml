<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- tree view -->
		<record id="view_vit_property_unit_tree" model="ir.ui.view">
			<field name="name">vit_property_unit_tree</field>
			<field name="model">vit.property_unit</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<list string="Property Unit">
					<field name="product_template_id" domain="[('is_property','=',True)]"/> <!-- 10-->
					<field name="name" /> <!-- 100-->
					<field name="owner_id" /> <!-- 100-->
					<field name="address" /> <!-- 101-->
					<field name="currency_id" /> <!-- 101-->
					<field name="description" /> <!-- 102-->
					<field name="stage_id" /> <!-- 102-->
					<field name="total_tokens" /> <!-- 103-->
					<field name="available_tokens" /> <!-- 104-->
					<field name="price_per_token" /> <!-- 105-->
					<field name="property_type" /> <!-- 106-->
					<field name="cost_price" /> <!-- 107-->
					<field name="sale_price" /> <!-- 108-->
					<field name="is_sale" /> <!-- 109-->
					<field name="is_rent" /> <!-- 110-->
					<field name="rental_price" /> <!-- 111-->
					<field name="sale_price_target" /> <!-- 112-->
					<field name="expected_rental_yield" /> <!-- 113-->
					<field name="expected_capital_appreciation" /> <!-- 114-->
					<field name="internal_rate_of_return" /> <!-- 115-->
					<field name="bedroom_count" /> <!-- 116-->
					<field name="bathroom_count" /> <!-- 117-->
					<field name="property_size" /> <!-- 118-->
					<field name="longitude" /> <!-- 119-->
					<field name="latitude" /> <!-- 120-->
				</list>
			</field>
		</record>
		<!-- pivot view -->
		<record id="view_vit_property_unit_pivot" model="ir.ui.view">
			<field name="name">vit_property_unit_tree</field>
			<field name="model">vit.property_unit</field>
			<field name="type">pivot</field>
			<field name="arch" type="xml">
				<pivot string="Property Unit">
					<field name="product_template_id" type="row"/>
					<field name="owner_id" type="row"/>
					<field name="currency_id" type="row"/>
					<field name="stage_id" type="row"/>
				</pivot>
			</field>
		</record>
		<!-- form view -->
		<record id="view_vit_property_unit_form" model="ir.ui.view">
			<field name="name">vit_property_unit_form</field>
			<field name="model">vit.property_unit</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="Property Unit">
					<header>
						<button string="Confirm" type="object" name="action_confirm" invisible="allow_confirm==False" class="oe_highlight" icon="fa-check-circle" />
						<button string="Cancel" type="object" name="action_cancel" invisible="allow_cancel==False" icon="fa-times-circle"/>
						<field name="stage_id" widget="statusbar" options="{'fold_field':'fold'}" />
						<button string="Generate Token" type="object" name="action_generate_token" />
						<button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
								<!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
								<!--field name="detail_ids" invisible="1"/-->
							<!--/button-->
						</div>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" string="Property Unit Name"/>
							<h1><field name="name" /></h1>
						</div>
						<group>
							<group> <!-- left -->
								<field name="stage_is_draft" invisible="True" />
								<field name="stage_is_done" invisible="True" readonly="stage_is_draft==False"/>
								<field name="allow_confirm" invisible="True" readonly="stage_is_draft==False"/>
								<field name="allow_cancel" invisible="True" readonly="stage_is_draft==False"/>
								<field name="stage_name" invisible="True" readonly="stage_is_draft==False"/>
								<field name="product_template_id" domain="[('is_property','=',True)]" readonly="stage_is_draft==False"/>
								<field name="total_tokens"  readonly="stage_is_draft==False"/>
								<field name="available_tokens"  readonly="stage_is_draft==False"/>
								<field name="price_per_token"  readonly="stage_is_draft==False"/>
								<field name="cost_price"  readonly="stage_is_draft==False"/>
								<field name="sale_price"  readonly="stage_is_draft==False"/>
								<field name="rental_price"  readonly="stage_is_draft==False"/>
								<field name="sale_price_target"  readonly="stage_is_draft==False"/>
								<field name="expected_rental_yield"  readonly="stage_is_draft==False"/>
								<field name="expected_capital_appreciation"  readonly="stage_is_draft==False"/>
								<field name="internal_rate_of_return"  readonly="stage_is_draft==False"/>
								<field name="bedroom_count"  readonly="stage_is_draft==False"/>
								<field name="bathroom_count"  readonly="stage_is_draft==False"/>
								<field name="property_size"  readonly="stage_is_draft==False"/>
								<field name="longitude"  readonly="stage_is_draft==False"/>
								<field name="latitude"  readonly="stage_is_draft==False"/>
							</group>
							<group> <!-- right -->
								<field name="owner_id"  readonly="stage_is_draft==False"/>
								<field name="address"  readonly="stage_is_draft==False"/>
								<field name="currency_id"  readonly="stage_is_draft==False"/>
								<field name="description"  readonly="stage_is_draft==False"/>
								<field name="property_type"  readonly="stage_is_draft==False"/>
								<field name="is_sale"  readonly="stage_is_draft==False"/>
								<field name="is_rent"  readonly="stage_is_draft==False"/>
							</group>
						</group>
						<notebook>
							<page name="token_ids" string="Token">
								<field name="token_ids" readonly="stage_is_draft==False"/>
							</page>
							<page name="property_unit_image_ids" string="Property Unit Image">
								<field name="property_unit_image_ids" readonly="stage_is_draft==False">
									<list >
										<field name="name" /> <!-- 100-->
										<field name="sequence" /> <!-- 101-->
										<field name="image" widget="image"/> <!-- 102-->
									</list>
								</field>
							</page>
							<page name="property_document_ids" string="Document">
								<field name="property_document_ids" readonly="stage_is_draft==False">
									<list >
										<field name="document_file" /> <!-- 100-->
										<field name="name" /> <!-- 100-->
										<field name="file_name" /> <!-- 101-->
										<field name="date_expiry" /> <!-- 102-->
										<field name="issue_date" /> <!-- 103-->
									</list>
								</field>
							</page>
							<page name="property_timeline_ids" string="Property Timeline">
								<field name="property_timeline_ids" readonly="stage_is_draft==False">
									<list >
										<field name="name" /> <!-- 100-->
										<field name="description" /> <!-- 101-->
										<field name="timeline_date" /> <!-- 102-->
										<field name="status" /> <!-- 103-->
									</list>
								</field>
							</page>
						</notebook>
						<group name="note_group" col="6" class="mt-2 mt-md-0">
							<group colspan="4">
							</group>
							<group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
							</group>
							<div class="clearfix"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- search -->
		<record id="view_vit_property_unit_search" model="ir.ui.view">
			<field name="name">vit_property_unit</field>
			<field name="model">vit.property_unit</field>
			<field name="arch" type="xml">
				<search string="Property Unit">

					<filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
					<filter string="Address" name="filter_by_address" domain="[('address','=','')]" />
					<filter string="Description" name="filter_by_description" domain="[('description','=','')]" />
					<filter string="Total Tokens" name="filter_by_total_tokens" domain="[('total_tokens','=','')]" />
					<filter string="Available Tokens" name="filter_by_available_tokens" domain="[('available_tokens','=','')]" />
					<filter string="Property Type" name="filter_by_property_type" domain="[('property_type','=','')]" />
					<filter string="Cost Price" name="filter_by_cost_price" domain="[('cost_price','=','')]" />
					<filter string="Sale Price" name="filter_by_sale_price" domain="[('sale_price','=','')]" />
					<filter string="Is Sale" name="filter_by_is_sale" domain="[('is_sale','=','')]" />
					<filter string="Is Rent" name="filter_by_is_rent" domain="[('is_rent','=','')]" />
					<filter string="Rental Price" name="filter_by_rental_price" domain="[('rental_price','=','')]" />
					<filter string="Sale Price Target" name="filter_by_sale_price_target" domain="[('sale_price_target','=','')]" />
					<filter string="Expected Rental Yield" name="filter_by_expected_rental_yield" domain="[('expected_rental_yield','=','')]" />
					<filter string="Expected Capital Appreciation" name="filter_by_expected_capital_appreciation" domain="[('expected_capital_appreciation','=','')]" />
					<filter string="Internal Rate Of Return" name="filter_by_internal_rate_of_return" domain="[('internal_rate_of_return','=','')]" />
					<filter string="Stage Is Draft" name="filter_by_stage_is_draft" domain="[('stage_is_draft','=','')]" />
					<filter string="Stage Is Done" name="filter_by_stage_is_done" domain="[('stage_is_done','=','')]" />
					<filter string="Allow Confirm" name="filter_by_allow_confirm" domain="[('allow_confirm','=','')]" />
					<filter string="Allow Cancel" name="filter_by_allow_cancel" domain="[('allow_cancel','=','')]" />
					<filter string="Stage Name" name="filter_by_stage_name" domain="[('stage_name','=','')]" />
					<filter string="Bedroom Count" name="filter_by_bedroom_count" domain="[('bedroom_count','=','')]" />
					<filter string="Bathroom Count" name="filter_by_bathroom_count" domain="[('bathroom_count','=','')]" />
					<filter string="Property Size" name="filter_by_property_size" domain="[('property_size','=','')]" />
					<filter string="Longitude" name="filter_by_longitude" domain="[('longitude','=','')]" />
					<filter string="Latitude" name="filter_by_latitude" domain="[('latitude','=','')]" />
					<field name="name" select="True"/>
					<field name="address" select="True"/>
					<field name="description" select="True"/>
					<field name="total_tokens" select="True"/>
					<field name="available_tokens" select="True"/>
					<field name="property_type" select="True"/>
					<field name="cost_price" select="True"/>
					<field name="sale_price" select="True"/>
					<field name="is_sale" select="True"/>
					<field name="is_rent" select="True"/>
					<field name="rental_price" select="True"/>
					<field name="sale_price_target" select="True"/>
					<field name="expected_rental_yield" select="True"/>
					<field name="expected_capital_appreciation" select="True"/>
					<field name="internal_rate_of_return" select="True"/>
					<field name="stage_is_draft" select="True"/>
					<field name="stage_is_done" select="True"/>
					<field name="allow_confirm" select="True"/>
					<field name="allow_cancel" select="True"/>
					<field name="stage_name" select="True"/>
					<field name="bedroom_count" select="True"/>
					<field name="bathroom_count" select="True"/>
					<field name="property_size" select="True"/>
					<field name="longitude" select="True"/>
					<field name="latitude" select="True"/>
					<field name="product_template_id" select="True"/>
					<field name="owner_id" select="True"/>
					<field name="currency_id" select="True"/>
					<field name="stage_id" select="True"/>
					<group string="Group By..">
						<filter string="Product Template" domain="[]" name="group_by_product_template_id" context="{'group_by':'product_template_id'}"/>
						<filter string="Owner" domain="[]" name="group_by_owner_id" context="{'group_by':'owner_id'}"/>
						<filter string="Currency" domain="[]" name="group_by_currency_id" context="{'group_by':'currency_id'}"/>
						<filter string="Stage" domain="[]" name="group_by_stage_id" context="{'group_by':'stage_id'}"/>
						<filter string="Property Type" domain="[]" name="group_by_property_type" context="{'group_by':'property_type'}"/>
					</group>
				</search>
			</field>
		</record>
		<!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
		<record id="view_vit_property_unit_kanban" model="ir.ui.view" >
			<field name="name">vit_property_unit</field>
			<field name="model">vit.property_unit</field>
			<field name="arch" type="xml">
				<kanban version="7.0">
					<field name="id" />
					<templates>
						<t t-name="card" class="flex-row">
							<main class="p-2">
								<h4>
									<a type="open"><field name="name"/></a>
								</h4>
							</main>
						</t>
					</templates>
				</kanban>
			</field>
		</record>
		<!-- graph -->
		<record id="view_vit_property_unit_graph" model="ir.ui.view">
			<field name="name">vit_property_unit</field>
			<field name="model">vit.property_unit</field>
			<field name="arch" type="xml">
				<graph string="Property Unit" type="bar">
					<field name="product_template_id"/>
				</graph>
			</field>
		</record>
		<!-- action window -->
		<record id="action_property_unit" model="ir.actions.act_window">
			<field name="name">Property Unit</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">vit.property_unit</field>
			<field name="view_mode">list,form,kanban,pivot,graph</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
				Click to add a new Property Unit
				</p><p>

				</p>
			</field>
		</record>

		<menuitem id="menu_property_unit" name="Property Unit" parent="vit_property_menu_1" action="action_property_unit" sequence="10"/>
	</data>
</odoo>