<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- tree view -->
		<record id="view_vit_document_type_tree" model="ir.ui.view">
			<field name="name">vit_document_type_tree</field>
			<field name="model">vit.document_type</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<list string="Document Type">
					<field name="name" /> <!-- 100-->
					<field name="code" /> <!-- 101-->
				</list>
			</field>
		</record>
		<!-- form view -->
		<record id="view_vit_document_type_form" model="ir.ui.view">
			<field name="name">vit_document_type_form</field>
			<field name="model">vit.document_type</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="Document Type">
					<header>
						<button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
								<!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
								<!--field name="detail_ids" invisible="1"/-->
							<!--/button-->
						</div>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" string="Document Type Name"/>
							<h1><field name="name" /></h1>
						</div>
						<group>
							<group> <!-- left -->
								<field name="code"  />
							</group>
							<group> <!-- right -->
							</group>
						</group>
						<notebook>
						</notebook>
						<group name="note_group" col="6" class="mt-2 mt-md-0">
							<group colspan="4">
							</group>
							<group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
							</group>
							<div class="clearfix"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- search -->
		<record id="view_vit_document_type_search" model="ir.ui.view">
			<field name="name">vit_document_type</field>
			<field name="model">vit.document_type</field>
			<field name="arch" type="xml">
				<search string="Document Type">

					<filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
					<filter string="Code" name="filter_by_code" domain="[('code','=','')]" />
					<field name="name" select="True"/>
					<field name="code" select="True"/>
					<group string="Group By..">
					</group>
				</search>
			</field>
		</record>
		<!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
		<record id="view_vit_document_type_kanban" model="ir.ui.view" >
			<field name="name">vit_document_type</field>
			<field name="model">vit.document_type</field>
			<field name="arch" type="xml">
				<kanban version="7.0">
					<field name="id" />
					<templates>
						<t t-name="card" class="flex-row">
							<main class="p-2">
								<h4>
									<a type="open"><field name="name"/></a>
								</h4>
							</main>
						</t>
					</templates>
				</kanban>
			</field>
		</record>
		<!-- action window -->
		<record id="action_document_type" model="ir.actions.act_window">
			<field name="name">Document Type</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">vit.document_type</field>
			<field name="view_mode">list,form,kanban,pivot</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
				Click to add a new Document Type
				</p><p>

				</p>
			</field>
		</record>

		<menuitem id="menu_document_type" name="Document Type" parent="vit_property_config_menu" action="action_document_type" sequence="200"/>
	</data>
</odoo>