<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- tree view -->
		<record id="view_vit_property_timeline_tree" model="ir.ui.view">
			<field name="name">vit_property_timeline_tree</field>
			<field name="model">vit.property_timeline</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<list string="Property Timeline">
					<field name="name" /> <!-- 100-->
					<field name="property_unit_id" /> <!-- 100-->
					<field name="description" /> <!-- 101-->
					<field name="timeline_date" /> <!-- 102-->
					<field name="status" /> <!-- 103-->
				</list>
			</field>
		</record>
		<!-- pivot view -->
		<record id="view_vit_property_timeline_pivot" model="ir.ui.view">
			<field name="name">vit_property_timeline_tree</field>
			<field name="model">vit.property_timeline</field>
			<field name="type">pivot</field>
			<field name="arch" type="xml">
				<pivot string="Property Timeline">
					<field name="property_unit_id" type="row"/>
				</pivot>
			</field>
		</record>
		<!-- form view -->
		<record id="view_vit_property_timeline_form" model="ir.ui.view">
			<field name="name">vit_property_timeline_form</field>
			<field name="model">vit.property_timeline</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="Property Timeline">
					<header>
						<button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
								<!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
								<!--field name="detail_ids" invisible="1"/-->
							<!--/button-->
						</div>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" string="Property Timeline Name"/>
							<h1><field name="name" /></h1>
						</div>
						<group>
							<group> <!-- left -->
								<field name="description"  />
								<field name="timeline_date"  />
								<field name="status"  />
							</group>
							<group> <!-- right -->
								<field name="property_unit_id"  />
							</group>
						</group>
						<notebook>
						</notebook>
						<group name="note_group" col="6" class="mt-2 mt-md-0">
							<group colspan="4">
							</group>
							<group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
							</group>
							<div class="clearfix"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- search -->
		<record id="view_vit_property_timeline_search" model="ir.ui.view">
			<field name="name">vit_property_timeline</field>
			<field name="model">vit.property_timeline</field>
			<field name="arch" type="xml">
				<search string="Property Timeline">

					<filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
					<filter string="Description" name="filter_by_description" domain="[('description','=','')]" />
					<filter string="Timeline Date" name="filter_by_timeline_date" domain="[('timeline_date','=','')]" />
					<filter string="Status" name="filter_by_status" domain="[('status','=','')]" />
					<field name="name" select="True"/>
					<field name="description" select="True"/>
					<field name="timeline_date" select="True"/>
					<field name="status" select="True"/>
					<field name="property_unit_id" select="True"/>
					<group string="Group By..">
						<filter string="Property Unit" domain="[]" name="group_by_property_unit_id" context="{'group_by':'property_unit_id'}"/>
						<filter string="Status" domain="[]" name="group_by_status" context="{'group_by':'status'}"/>
					</group>
				</search>
			</field>
		</record>
		<!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
		<record id="view_vit_property_timeline_kanban" model="ir.ui.view" >
			<field name="name">vit_property_timeline</field>
			<field name="model">vit.property_timeline</field>
			<field name="arch" type="xml">
				<kanban version="7.0">
					<field name="id" />
					<templates>
						<t t-name="card" class="flex-row">
							<main class="p-2">
								<h4>
									<a type="open"><field name="name"/></a>
								</h4>
								<span class="text-muted">Timeline Date</span> <field name="timeline_date"></field>
							</main>
						</t>
					</templates>
				</kanban>
			</field>
		</record>
		<!-- calendar if a date field exists -->
		<record id="view_vit_property_timeline_cal" model="ir.ui.view">
			<field name="name">vit_property_timeline_cal</field>
			<field name="model">vit.property_timeline</field>
			<field name="arch" type="xml">
				<calendar string="Property Timeline" date_start="timeline_date">
					<field name="name" />
				</calendar>
			</field>
		</record>
		<!-- graph -->
		<record id="view_vit_property_timeline_graph" model="ir.ui.view">
			<field name="name">vit_property_timeline</field>
			<field name="model">vit.property_timeline</field>
			<field name="arch" type="xml">
				<graph string="Property Timeline" type="bar">
					<field name="property_unit_id"/>
				</graph>
			</field>
		</record>
		<!-- action window -->
		<record id="action_property_timeline" model="ir.actions.act_window">
			<field name="name">Property Timeline</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">vit.property_timeline</field>
			<field name="view_mode">list,form,kanban,pivot,calendar,graph</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
				Click to add a new Property Timeline
				</p><p>

				</p>
			</field>
		</record>

		<menuitem id="menu_property_timeline" name="Property Timeline" parent="vit_property_config_menu" action="action_property_timeline" sequence="240"/>
	</data>
</odoo>