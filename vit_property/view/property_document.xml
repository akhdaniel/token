<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- tree view -->
		<record id="view_vit_property_document_tree" model="ir.ui.view">
			<field name="name">vit_property_document_tree</field>
			<field name="model">vit.property_document</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<list string="Property Document">
					<field name="document_file" /> <!-- 100-->
					<field name="name" /> <!-- 100-->
					<field name="file_name" /> <!-- 101-->
					<field name="property_unit_id" /> <!-- 101-->
					<field name="date_expiry" /> <!-- 102-->
					<field name="issue_date" /> <!-- 103-->
				</list>
			</field>
		</record>
		<!-- pivot view -->
		<record id="view_vit_property_document_pivot" model="ir.ui.view">
			<field name="name">vit_property_document_tree</field>
			<field name="model">vit.property_document</field>
			<field name="type">pivot</field>
			<field name="arch" type="xml">
				<pivot string="Property Document">
					<field name="name" type="row"/>
					<field name="property_unit_id" type="row"/>
				</pivot>
			</field>
		</record>
		<!-- form view -->
		<record id="view_vit_property_document_form" model="ir.ui.view">
			<field name="name">vit_property_document_form</field>
			<field name="model">vit.property_document</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="Property Document">
					<header>
						<button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
								<!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
								<!--field name="detail_ids" invisible="1"/-->
							<!--/button-->
						</div>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" string="Property Document Name"/>
							<h1><field name="name" /></h1>
						</div>
						<group>
							<group> <!-- left -->
								<field name="document_file"  />
								<field name="file_name"  />
								<field name="date_expiry"  />
								<field name="issue_date"  />
							</group>
							<group> <!-- right -->
								<field name="property_unit_id"  />
							</group>
						</group>
						<notebook>
						</notebook>
						<group name="note_group" col="6" class="mt-2 mt-md-0">
							<group colspan="4">
							</group>
							<group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
							</group>
							<div class="clearfix"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- search -->
		<record id="view_vit_property_document_search" model="ir.ui.view">
			<field name="name">vit_property_document</field>
			<field name="model">vit.property_document</field>
			<field name="arch" type="xml">
				<search string="Property Document">

					<filter string="Document File" name="filter_by_document_file" domain="[('document_file','=','')]" />
					<filter string="File Name" name="filter_by_file_name" domain="[('file_name','=','')]" />
					<filter string="Date Expiry" name="filter_by_date_expiry" domain="[('date_expiry','=','')]" />
					<filter string="Issue Date" name="filter_by_issue_date" domain="[('issue_date','=','')]" />
					<field name="document_file" select="True"/>
					<field name="file_name" select="True"/>
					<field name="date_expiry" select="True"/>
					<field name="issue_date" select="True"/>
					<field name="name" select="True"/>
					<field name="property_unit_id" select="True"/>
					<group string="Group By..">
						<filter string="Name" domain="[]" name="group_by_name" context="{'group_by':'name'}"/>
						<filter string="Property Unit" domain="[]" name="group_by_property_unit_id" context="{'group_by':'property_unit_id'}"/>
					</group>
				</search>
			</field>
		</record>
		<!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
		<record id="view_vit_property_document_kanban" model="ir.ui.view" >
			<field name="name">vit_property_document</field>
			<field name="model">vit.property_document</field>
			<field name="arch" type="xml">
				<kanban version="7.0">
					<field name="id" />
					<templates>
						<t t-name="card" class="flex-row">
							<main class="p-2">
								<h4>
									<a type="open"><field name="name"/></a>
								</h4>
								<span class="text-muted">Issue Date</span> <field name="issue_date"></field>
							</main>
						</t>
					</templates>
				</kanban>
			</field>
		</record>
		<!-- calendar if a date field exists -->
		<record id="view_vit_property_document_cal" model="ir.ui.view">
			<field name="name">vit_property_document_cal</field>
			<field name="model">vit.property_document</field>
			<field name="arch" type="xml">
				<calendar string="Property Document" date_start="issue_date">
					<field name="name" />
				</calendar>
			</field>
		</record>
		<!-- graph -->
		<record id="view_vit_property_document_graph" model="ir.ui.view">
			<field name="name">vit_property_document</field>
			<field name="model">vit.property_document</field>
			<field name="arch" type="xml">
				<graph string="Property Document" type="bar">
					<field name="name"/>
				</graph>
			</field>
		</record>
		<!-- action window -->
		<record id="action_property_document" model="ir.actions.act_window">
			<field name="name">Property Document</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">vit.property_document</field>
			<field name="view_mode">list,form,kanban,pivot,calendar,graph</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
				Click to add a new Property Document
				</p><p>

				</p>
			</field>
		</record>

		<menuitem id="menu_property_document" name="Property Document" parent="vit_property_config_menu" action="action_property_document" sequence="210"/>
	</data>
</odoo>