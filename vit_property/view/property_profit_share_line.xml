<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- tree view -->
		<record id="view_vit_property_profit_share_line_tree" model="ir.ui.view">
			<field name="name">vit_property_profit_share_line_tree</field>
			<field name="model">vit.property_profit_share_line</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<list string="Property Profit Share Line">
					<field name="name" /> <!-- 100-->
					<field name="profit_share_id" /> <!-- 100-->
					<field name="amount" /> <!-- 101-->
					<field name="token_count" /> <!-- 102-->
				</list>
			</field>
		</record>
		<!-- pivot view -->
		<record id="view_vit_property_profit_share_line_pivot" model="ir.ui.view">
			<field name="name">vit_property_profit_share_line_tree</field>
			<field name="model">vit.property_profit_share_line</field>
			<field name="type">pivot</field>
			<field name="arch" type="xml">
				<pivot string="Property Profit Share Line">
					<field name="profit_share_id" type="row"/>
				</pivot>
			</field>
		</record>
		<!-- form view -->
		<record id="view_vit_property_profit_share_line_form" model="ir.ui.view">
			<field name="name">vit_property_profit_share_line_form</field>
			<field name="model">vit.property_profit_share_line</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="Property Profit Share Line">
					<header>
						<button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
								<!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
								<!--field name="detail_ids" invisible="1"/-->
							<!--/button-->
						</div>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" string="Property Profit Share Line Name"/>
							<h1><field name="name" /></h1>
						</div>
						<group>
							<group> <!-- left -->
								<field name="amount"  />
								<field name="token_count"  />
							</group>
							<group> <!-- right -->
								<field name="profit_share_id"  />
							</group>
						</group>
						<notebook>
						</notebook>
						<group name="note_group" col="6" class="mt-2 mt-md-0">
							<group colspan="4">
							</group>
							<group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
							</group>
							<div class="clearfix"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- search -->
		<record id="view_vit_property_profit_share_line_search" model="ir.ui.view">
			<field name="name">vit_property_profit_share_line</field>
			<field name="model">vit.property_profit_share_line</field>
			<field name="arch" type="xml">
				<search string="Property Profit Share Line">

					<filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
					<filter string="Amount" name="filter_by_amount" domain="[('amount','=','')]" />
					<filter string="Token Count" name="filter_by_token_count" domain="[('token_count','=','')]" />
					<field name="name" select="True"/>
					<field name="amount" select="True"/>
					<field name="token_count" select="True"/>
					<field name="profit_share_id" select="True"/>
					<group string="Group By..">
						<filter string="Profit Share" domain="[]" name="group_by_profit_share_id" context="{'group_by':'profit_share_id'}"/>
					</group>
				</search>
			</field>
		</record>
		<!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
		<record id="view_vit_property_profit_share_line_kanban" model="ir.ui.view" >
			<field name="name">vit_property_profit_share_line</field>
			<field name="model">vit.property_profit_share_line</field>
			<field name="arch" type="xml">
				<kanban version="7.0">
					<field name="id" />
					<templates>
						<t t-name="card" class="flex-row">
							<main class="p-2">
								<h4>
									<a type="open"><field name="name"/></a>
								</h4>
							</main>
						</t>
					</templates>
				</kanban>
			</field>
		</record>
		<!-- graph -->
		<record id="view_vit_property_profit_share_line_graph" model="ir.ui.view">
			<field name="name">vit_property_profit_share_line</field>
			<field name="model">vit.property_profit_share_line</field>
			<field name="arch" type="xml">
				<graph string="Property Profit Share Line" type="bar">
					<field name="profit_share_id"/>
				</graph>
			</field>
		</record>
		<!-- action window -->
		<record id="action_property_profit_share_line" model="ir.actions.act_window">
			<field name="name">Property Profit Share Line</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">vit.property_profit_share_line</field>
			<field name="view_mode">list,form,kanban,pivot,graph</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
				Click to add a new Property Profit Share Line
				</p><p>

				</p>
			</field>
		</record>

	</data>
</odoo>