                                <table class="table table-hover table-bordered align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-center">Property</th>
                                            <th class="text-center">Total Token Awal</th>
                                            <th class="text-end">Total Investasi</th>
                                            <th class="text-end">Total Profit</th>
                                            <th class="text-center">Token Profit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-if="rows">
                                            <t t-foreach="rows" t-as="r" t-index="i">
                                                <!-- ðŸ”¹ Baris Utama (Property) -->
                                                <tr class="property-row" style="cursor:pointer;" data-bs-toggle="collapse" t-attf-data-bs-target="#collapse-#{r['property_id']}">
                                                    <td>
                                                        <strong><t t-esc="r['property_name']"/></strong>
                                                    </td>
                                                    <td class="text-center">
                                                        <t t-esc="r['total_token']"/>
                                                    </td>
                                                    <td class="text-end">
                                                        <t t-esc="r['total_investasi']" t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                                    </td>
                                                    <td class="text-end text-success">
                                                        <t t-esc="r['total_profit']" t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                                    </td>
                                                    <td class="text-center">
                                                        <t t-esc="r['total_token_profit']"/>
                                                    </td>
                                                </tr>

                                                <!-- ðŸ”¹ Nested Table (Daftar Transaksi) -->
                                                <tr class="collapse" t-attf-id="collapse-#{r['property_id']}">
                                                    <td colspan="5">
                                                        <div class="p-1">
                                                            <span class="fw-semibold mb-2">
                                                                Transaksi : 
                                                                <span class="text-primary"><t t-esc="r['property_name']"/></span>
                                                            </span>
                                                            <table class="table table-sm table-bordered mb-2">
                                                                <thead class="table-secondary">
                                                                    <tr>
                                                                        <th class="text-center">Nomor Transaksi</th>
                                                                        <th class="text-center">Token</th>
                                                                        <th class="text-center">Jumlah Investasi</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <t t-if="r['transaksi']">
                                                                        <t t-foreach="r['transaksi']" t-as="trx" t-index="j">
                                                                            <tr>
                                                                                <td><t t-esc="trx['name']"/></td>
                                                                                <td class="text-center"><t t-esc="trx['token']"/></td>
                                                                                <td class="text-end">
                                                                                    <t t-esc="trx['jumlah_investasi']" t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                                                                </td>
                                                                            </tr>
                                                                        </t>
                                                                    </t>
                                                                    <t t-else="">
                                                                        <tr>
                                                                            <td colspan="3" class="text-center text-muted">
                                                                                Tidak ada transaksi.
                                                                            </td>
                                                                        </tr>
                                                                    </t>
                                                                </tbody>
                                                            </table>

                                                            <span class="fw-semibold mb-2">
                                                                Transaksi Penjualan Token : 
                                                                <span class="text-primary"><t t-esc="r['property_name']"/></span>
                                                            </span>
                                                            <table class="table table-sm table-bordered mb-2">
                                                                <thead class="table-secondary">
                                                                    <tr>
                                                                        <th class="text-center">Nomor Transaksi</th>
                                                                        <th class="text-center">Qty Token</th>
                                                                        <th class="text-center">Qty Token Available</th>
                                                                        <th class="text-center">Price Per Token</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <t t-if="r['token_resell']">
                                                                        <t t-foreach="r['token_resell']" t-as="trx" t-index="j">
                                                                            <tr>
                                                                                <td><t t-esc="trx['name']"/></td>
                                                                                <td class="text-center"><t t-esc="trx['qty_token']"/></td>
                                                                                <td class="text-center"><t t-esc="trx['qty_token_available']"/></td>
                                                                                <td class="text-end">
                                                                                    <t t-esc="trx['price_per_token']" t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                                                                </td>
                                                                            </tr>
                                                                        </t>
                                                                    </t>
                                                                    <t t-else="">
                                                                        <tr>
                                                                            <td colspan="4" class="text-center text-muted">
                                                                                Tidak ada transaksi penjualan token.
                                                                            </td>
                                                                        </tr>
                                                                    </t>
                                                                </tbody>
                                                            </table>

                                                            <span class="fw-semibold mb-2 mt-2">
                                                                Profit Share : 
                                                                <span class="text-primary"><t t-esc="r['property_name']"/></span>
                                                            </span>
                                                            <table class="table table-sm table-bordered mb-0">
                                                                <thead class="table-secondary">
                                                                    <tr>
                                                                        <th class="text-center">Periode</th>
                                                                        <th class="text-center">Profit</th>
                                                                        <th class="text-center">Token Profit</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <t t-if="r['profit_share']">
                                                                        <t t-foreach="r['profit_share']" t-as="ps" t-index="k">
                                                                            <tr>
                                                                                <td><t t-esc="ps['name']"/></td>
                                                                                <td class="text-end">
                                                                                    <t t-esc="ps['amount']" t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                                                                </td>
                                                                                <td class="text-center"><t t-esc="ps['token_count']"/></td>
                                                                            </tr>
                                                                        </t>
                                                                    </t>
                                                                    <t t-else="">
                                                                        <tr>
                                                                            <td colspan="3" class="text-center text-muted">
                                                                                Tidak ada profit sharing.
                                                                            </td>
                                                                        </tr>
                                                                    </t>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <tr>
                                                <td colspan="6" class="text-center text-muted py-4">
                                                    Belum ada data investasi.
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>

                                <!-- ðŸ”¹ Summary Section -->
                                <hr/>
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <h6 class="fw-bold mb-3">Summary</h6>
                                        <div class="row text-center">
                                            <div class="col-md-3 col-6 mb-2">
                                                <div class="fw-semibold">Total Token Awal</div>
                                                <div class="fw-bold">
                                                    <t t-esc="summary['total_token']"/>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-6 mb-2">
                                                <div class="fw-semibold">Total Investasi</div>
                                                <div class="fw-bold">
                                                    <t t-esc="summary['total_investasi']"
                                                    t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-6 mb-2">
                                                <div class="fw-semibold">Total Profit</div>
                                                <div class="fw-bold text-success">
                                                    <t t-esc="summary['total_profit']"
                                                    t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-6 mb-2">
                                                <div class="fw-semibold">Total Token Profit</div>
                                                <div class="fw-bold">
                                                    <t t-esc="summary['total_token_profit']"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <hr class="my-3"/>
                                <div class="text-center">
                                    <h5 class="fw-bold mb-1">Total Saldo</h5>
                                    <h4 class="fw-bold text-success">
                                        <t t-esc="summary['total_saldo']" t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                    </h4>
                                </div>

                                <div class="mt-4">
                                    <h5 class="fw-bold mb-3">Detail Token per Properti</h5>
                                    <div class="accordion modal-resell" id="tokenAccordion">
                                        <t t-foreach="property_tokens_map.values()" t-as="pt">
                                            <t t-set="slug" t-value="pt['property_name'].replace(' ', '-')"/>
                                            <t t-set="tokens_initial" t-value="[t for t in pt['tokens'] if t.token_type == 'token_initial']"/>
                                            <t t-set="tokens_reward" t-value="[t for t in pt['tokens'] if t.token_type == 'token_reward']"/>
                                            <div class="accordion-item mb-1 rounded">
                                                <h2 class="accordion-header" t-att-id="'heading-%s' % slug">
                                                    <button class="accordion-button collapsed fw-semibold" type="button" 
                                                        data-bs-toggle="collapse" 
                                                        t-att-data-bs-target="'#collapse-%s' % slug"
                                                        aria-expanded="false" 
                                                        t-att-aria-controls="'collapse-%s' % slug">
                                                        <i class="fa fa-building me-2 text-primary"></i>
                                                        <t t-esc="pt['property_name']"/>
                                                    </button>
                                                </h2>
                                                <div class="accordion-collapse collapse" t-att-id="'collapse-%s' % slug" t-att-aria-labelledby="'heading-%s' % slug" data-bs-parent="#tokenAccordion">
                                                    <div class="accordion-body">
                                                        <!-- Tabs for Token Initial & Reward -->
                                                        <ul class="nav nav-tabs mb-3 mt-2" id="tokenTabs" role="tablist">
                                                            <li class="nav-item" role="presentation">
                                                                <button class="nav-link active fw-semibold" id="initial-tab" data-bs-toggle="tab" t-att-data-bs-target="'#initial-%s' % slug" type="button" role="tab" aria-controls="initial" aria-selected="true">
                                                                    Token Initial <span class="badge bg-primary"><t t-esc="len(tokens_initial)"/></span>
                                                                </button>
                                                            </li>
                                                            <li class="nav-item" role="presentation">
                                                                <button class="nav-link fw-semibold" id="reward-tab" data-bs-toggle="tab" t-att-data-bs-target="'#reward-%s' % slug" type="button" role="tab" aria-controls="reward" aria-selected="false">
                                                                    Token Reward <span class="badge bg-primary"><t t-esc="len(tokens_reward)"/></span>
                                                                </button>
                                                            </li>
                                                        </ul>

                                                        <div class="tab-content" id="tokenTabsContent">
                                                            <!-- === TAB: TOKEN INITIAL === -->
                                                            <div class="tab-pane fade show active" t-att-id="'initial-%s' % slug" role="tabpanel" aria-labelledby="initial-tab">
                                                                <t t-if="tokens_initial">
                                                                    <div class="mb-4 mt-4">
                                                                        <button class="btn btn-primary" data-bs-toggle="modal" t-att-data-bs-target="'#resellPropertyModal-%s' % pt['property_id']" t-att-data-price="pt['tokens'][0].property_unit_id.price_per_token if pt['tokens'] else 0">
                                                                            Jual Token
                                                                        </button>
                                                                    </div>

                                                                    <div class="alert-container" id="alert-container"></div>

                                                                    <table class="table table-striped table-sm table-hover table-bordered align-middle mb-0">
                                                                        <thead class="table-light">
                                                                            <tr>
                                                                                <th class="text-center">Token Code</th>
                                                                                <th class="text-center">Token Type</th>
                                                                                <th class="text-center">Owner</th>
                                                                                <th class="text-center">Status</th>
                                                                                <th class="text-center">Price per Token</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            <t t-foreach="tokens_initial" t-as="token" t-key="token.id">
                                                                                <tr>
                                                                                    <td class="text-center">
                                                                                        <span class="badge bg-info"><t t-esc="token.token_code"/></span>
                                                                                    </td>
                                                                                    <td class="text-center"><t t-esc="dict(token._fields['token_type'].selection).get(token.token_type)"/></td>
                                                                                    <td class="text-center">
                                                                                        <t t-esc="token.token_owner_id.display_name or '-'"/>
                                                                                    </td>
                                                                                    <td class="text-center">
                                                                                        <t t-if="token.token_state == 'available'">
                                                                                            <span class="badge bg-info">Available</span>
                                                                                        </t>
                                                                                        <t t-elif="token.token_state == 'reserved'">
                                                                                            <span class="badge bg-warning text-dark">Reserved</span>
                                                                                        </t>
                                                                                        <t t-else="">
                                                                                            <span class="badge bg-success">Sold</span>
                                                                                        </t>
                                                                                    </td>
                                                                                    <td class="text-end">
                                                                                        <t t-esc="token.property_unit_id.price_per_token" t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                                                                    </td>
                                                                                </tr>
                                                                            </t>
                                                                        </tbody>
                                                                    </table>
                                                                </t>
                                                                <t t-else="">
                                                                    <div class="alert alert-secondary mb-0">Belum ada Token Initial.</div>
                                                                </t>
                                                            </div>

                                                            <!-- === TAB: TOKEN REWARD === -->
                                                            <div class="tab-pane fade" t-att-id="'reward-%s' % slug" role="tabpanel" aria-labelledby="reward-tab">
                                                                <t t-if="tokens_reward">
                                                                    <table class="table table-striped table-sm table-hover table-bordered align-middle mb-0">
                                                                        <thead class="table-light">
                                                                            <tr>
                                                                                <th class="text-center">Token Code</th>
                                                                                <th class="text-center">Token Type</th>
                                                                                <th class="text-center">Owner</th>
                                                                                <th class="text-center">Status</th>
                                                                                <th class="text-center">Price per Token</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            <t t-foreach="tokens_reward" t-as="token" t-key="token.id">
                                                                                <tr>
                                                                                    <td class="text-center">
                                                                                        <span class="badge bg-info"><t t-esc="token.token_code"/></span>
                                                                                    </td>
                                                                                    <td class="text-center"><t t-esc="dict(token._fields['token_type'].selection).get(token.token_type)"/></td>
                                                                                    <td class="text-center">
                                                                                        <t t-esc="token.token_owner_id.display_name or '-'"/>
                                                                                    </td>
                                                                                    <td class="text-center">
                                                                                        <t t-if="token.token_state == 'available'">
                                                                                            <span class="badge bg-info">Available</span>
                                                                                        </t>
                                                                                        <t t-elif="token.token_state == 'reserved'">
                                                                                            <span class="badge bg-warning text-dark">Reserved</span>
                                                                                        </t>
                                                                                        <t t-else="">
                                                                                            <span class="badge bg-success">Sold</span>
                                                                                        </t>
                                                                                    </td>
                                                                                    <td class="text-end">
                                                                                        <t t-esc="token.property_unit_id.price_per_token" t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                                                                    </td>
                                                                                </tr>
                                                                            </t>
                                                                        </tbody>
                                                                    </table>
                                                                </t>
                                                                <t t-else="">
                                                                    <div class="alert alert-secondary mb-0">Belum ada Token Reward.</div>
                                                                </t>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Modal Resell -->
                                            <div class="modal fade modal-resell" t-att-id="'resellPropertyModal-%s' % pt['property_id']" tabindex="-1" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <div class="modal-header bg-primary text-white">
                                                            <h5 class="modal-title">Resell Token - <t t-esc="pt['property_name']"/></h5>
                                                            <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <form class="resell-property-form" t-att-data-property-id="pt['property_id']">
                                                                <div class="mb-3">
                                                                    <label class="form-label">Jumlah Token yang ingin dijual</label>
                                                                    <input type="number" name="qty_token" class="form-control" min="1" t-att-max="len(tokens_initial)" required="True" />
                                                                    <small class="text-muted">Anda memiliki <t t-esc="len(tokens_initial)"/> token yang bisa dijual kembali</small>
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label class="form-label">Harga per Token</label>
                                                                    <input type="text" name="price_per_token_display" class="form-control currency-input" id="price_per_token_display" required="True"/>
                                                                    <input type="hidden" name="price_per_token" id="price_per_token" />
                                                                </div>
                                                                <div class="text-end">
                                                                    <button type="submit" class="btn btn-success">
                                                                        <i class="fa fa-paper-plane me-1"></i> Ajukan Resell
                                                                    </button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
