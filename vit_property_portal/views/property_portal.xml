									<p class="fw-semibold mb-0"><t t-esc="sold_tokens"/> dari <t t-esc="property.total_tokens"/> token terjual</p>
								</div>

								<!-- Metrics Section -->
								<div class="row g-3 mb-3 text-center">
									<div class="col-4">
										<div class="metric-badge">
											<!-- <i class="fa fa-chart text-primary mb-1"></i> -->
											<div class="fw-bold"><t t-esc="property.expected_rental_yield"/>%</div>
											<small class="text-muted">ERY</small>
										</div>
									</div>
									<div class="col-4">
										<div class="metric-badge">
											<!-- <i class="fa fa-building text-success mb-1"></i> -->
											<div class="fw-bold"><t t-esc="property.expected_capital_appreciation"/>%</div>
											<small class="text-muted">ECA</small>
										</div>
									</div>
									<div class="col-4">
										<div class="metric-badge">
											<!-- <i class="fa fa-coins text-warning mb-1"></i> -->
											<div class="fw-bold"><t t-esc="property.internal_rate_of_return"/>%</div>
											<small class="text-muted">IRR</small>
										</div>
									</div>
								</div>

								<!-- Price Section -->
								<div class="text-center mt-4">
									<div class="d-flex justify-content-center flex-wrap gap-4">
										<div>
											<small class="text-muted d-block">Harga per Token</small>
											<h5 class="fw-bold text-primary mb-0" 
												t-esc="property.price_per_token" 
												t-options="{'widget':'monetary','display_currency':property.currency_id}"/>
										</div>
										<div>
											<small class="text-muted d-block">Tersedia</small>
											<h5 class="fw-bold text-success mb-0"><t t-esc="property.available_tokens"/></h5>
										</div>
									</div>
								</div>
							</div>
						</div>

						<!-- Investment Form -->
						<form t-att-action="'/properties/%d/buy_token' % property.id" method="post" class="needs-validation">
							<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
							<input type="hidden" name="property_id" t-att-value="property.id"/>

							<div class="p-4 rounded-4 investment-form">
								<label class="form-label fw-semibold mb-2">Jumlah Token</label>
								<input type="number"
									name="qty_token"
									class="form-control form-control-lg mb-3 vit-token-input"
									min="1"
									t-att-max="property.available_tokens"
									value="1"
									id="tokenInput"
									placeholder="Masukkan jumlah token..."/>

								<t t-set="is_sold_out" t-value="property.available_tokens == 0 and sold_percent == 100"/>

								<!-- Quick Buttons -->
								<div class="d-flex flex-wrap gap-2 mb-4">
									<t t-foreach="[5, 10, 25, 100]" t-as="qty">
										<button type="button"
											class="btn btn-outline-primary flex-fill quick-btn"
											t-att-data-value="qty"
											t-att-disabled="True if is_sold_out else None"
											t-att-class="'btn btn-outline-primary flex-fill quick-btn disabled' if is_sold_out else 'btn btn-outline-primary flex-fill quick-btn'">
											<t t-esc="qty"/>
										</button>
									</t>
								</div>


								<!-- Total -->
								<div class="alert alert-info text-center py-2 mb-4 rounded-3">
									Total Investasi: <strong class="vit-token-total">Rp 0</strong>
								</div>

								<t t-if="property.available_tokens == 0 and sold_percent == 100">
									<button type="button" class="btn btn-secondary btn-lg w-100 rounded-3 shadow-sm disabled" disabled="True">
										Investasi Sekarang
									</button>
								</t>
								<t t-else="">
									<button type="submit" class="btn btn-primary btn-lg w-100 rounded-3 shadow-sm">
										Investasi Sekarang
									</button>
								</t>
							</div>
						</form>

						<!-- Investor Pemegang Saham -->
						<t t-if="investors">
							<div class="card border-1 rounded-4 mt-4">
								<div class="card-body p-4">
									<h5 class="fw-bold mb-3 text-primary">
										<i class="fa fa-users me-2"></i> Investor Pemegang Token
									</h5>
									<p class="text-muted small mb-4">
										Menampilkan daftar investor yang telah membeli token properti ini.
									</p>

									<div class="list-group list-group-flush">
										<t t-foreach="investors" t-as="inv">
											<t t-set="percentage" t-value="(inv['total_token'] / total_token * 100) if total_token else 0"/>
											<div class="list-group-item px-0 py-3 border-bottom">
												<div class="d-flex justify-content-between align-items-center mb-2">
													<div class="d-flex align-items-center">
														<div class="rounded-circle bg-primary text-white fw-bold d-flex align-items-center justify-content-center me-3"
															style="width:40px;height:40px;">
															<t t-esc="(inv['partner'].name or '?')[0].upper()"/>
														</div>
														<div>
															<div class="fw-semibold"><t t-esc="inv['partner'].name"/></div>
															<small class="text-muted">Bergabung: <t t-esc="inv['last_date'].strftime('%d %b %Y') if inv['last_date'] else '-'"/></small>
														</div>
													</div>
													<div class="text-end">
														<span class="fw-bold text-dark"><t t-esc="inv['total_token']"/></span>
														<small class="text-muted ms-1">Token</small>
													</div>
												</div>

												<div class="progress" style="height:8px;">
													<div class="progress-bar bg-primary" 
														role="progressbar"
														t-att-style="'width: {}%'.format(int(percentage))"
														t-att-aria-valuenow="int(percentage)"
														aria-valuemin="0" aria-valuemax="100">
													</div>
												</div>
												<small class="text-muted d-block mt-1">
													<t t-esc="'%.2f' % percentage"/>% dari total token
												</small>
											</div>
										</t>
									</div>
								</div>
							</div>
						</t>
						<t t-else="">
							<div class="alert alert-light border text-center mt-4 rounded-4">
								<i class="fa fa-user-times text-muted me-2"></i> 
								Belum ada investor yang membeli token properti ini.
							</div>
						</t>
					</div>
				</div>
			</section>
		</t>
	</template>

</odoo>
